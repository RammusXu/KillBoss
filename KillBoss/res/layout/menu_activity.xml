<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_xml" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/menu_activity.ImageButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_activity_setting" />

        <ImageButton
            android:id="@+id/menu_activity.ImageButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_activity_setting" />

        <ImageButton
            android:id="@+id/menu_activity.ImageButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_activity_setting" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/menu_activity.fragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>